<!DOCTYPE html>
<html>
  <head>
    <title>ChatGPT Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles.css">
  </head>
  <body data-bs-theme="dark">

    <div class="container">
      <button id="dark-mode-toggle" class="btn btn-outline-primary">Toggle Dark Mode</button>

      <form class="form-group" action="/chat" method="post">
        <div class="form-group">
          <label for="prompt">Enter your question:</label>
          <input
            class="form-control"
            type="text"
            name="prompt"
            id="prompt"
            required
          />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="card">
            <div class="card-body">
              <div class="chat-history">
                <% if (typeof messages !== 'undefined') { %> <% for(let i = 0; i
                < messages.length; i++) { %>
                <div class="chat-message <%= messages[i].type %>-message">
                  <% if (messages[i].type === 'user') { %>
                  <p class="text-left">User: <%= messages[i].text %></p>
                  <% } else { %>
                  <p class="text-right">Chatbot: <%= messages[i].text %></p>
                  <% } %>
                </div>
                <% } %> <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script type="text/javascript" src="index.js"></script>
  </body>
</html>
